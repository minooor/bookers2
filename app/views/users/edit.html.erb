<html>
    <body>
        <main>
            <%= form_with model: @user, local:true do |f| %>
            <p id="notice"></p>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                        <h2>User info</h2>
                        <div class="form-group">
                            <label for="user_name">Name</label>
                            <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
                            
                        </div>
                        
                        <div class="form-group">
                            <label for="user_image">Image</label>
                            <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
                        </div>
                        
                        <div class="form-group">
                            <label for="user_introduction">Introduction</label>
                            <p><%=f.text_area :introduction, autofocus: true, id:"inputIntroduction" %></p>
                            
                        </div>
                        
                        <div class="form-group">
                            <%= f.submit "Update User" %>
                        
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </main>
    </body>
</html>